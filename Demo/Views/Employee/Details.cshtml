@model Demo.BL.Models.EmployeeVM
@{
    ViewBag.Title = SharedLocalizer["Details"];
}

<h2>@SharedLocalizer["Employee Details"]</h2>
<br />
<label asp-for="Id">@SharedLocalizer["Id"]</label>
<input type="text" asp-for="Id" class="form-control" disabled />
<br />

<label asp-for="Name">@SharedLocalizer["Name"]</label>
<input type="text" asp-for="Name" class="form-control" disabled />
<br />

<label asp-for="Salary">@SharedLocalizer["Salary"]</label>
<input type="text" asp-for="Salary" class="form-control" disabled />
<br />

<label asp-for="HireDate">@SharedLocalizer["HireDate"]</label>
<input type="text" asp-for="HireDate" class="form-control" disabled />
<br />

<label asp-for="Address">@SharedLocalizer["Address"]</label>
<input type="text" asp-for="Address" class="form-control" disabled />
<br />

<label asp-for="Email">@SharedLocalizer["Email"]</label>
<input type="text" asp-for="Email" class="form-control" disabled />
<br />

<label asp-for="Note">@SharedLocalizer["Note"]</label>
<textarea asp-for="Note" class="form-control" disabled></textarea>
<br />

<form>
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" disabled>
        <label asp-for="IsActive">@SharedLocalizer["IsActive"]</label>
    </div>
</form>
<br />

<select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList">
    <option disabled>@SharedLocalizer["Choose Department"]</option>
</select>
<br />
<br />


<center>
    <a asp-action="Index" asp-controller="Employee" class="btn btn-warning btn-lg">@SharedLocalizer["Back To Data"]</a>
    <a asp-action="Update" asp-controller="Employee" class="btn bg-purple btn-lg" asp-route-Id="@Model.Id">@SharedLocalizer["Update"]</a>
    <a asp-action="Delete" asp-controller="Employee" class="btn btn-danger btn-lg" asp-route-Id="@Model.Id">@SharedLocalizer["Delete"]</a>
</center>
<br />
<br />

@section BootstrapSelectList {
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}