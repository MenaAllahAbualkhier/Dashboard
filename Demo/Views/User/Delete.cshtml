@model Demo.BL.Models.UserVM
@{
    ViewBag.Title= "Delete";
}

<h2>Delete</h2>
<form class="form-group" asp-action="Delete" asp-controller="User">
    <div asp-validation-summary="All"></div>
    <label asp-for="Id">Id</label>
    <input type="text" asp-for="Id" class="form-control" disabled />
    <br />

    <label asp-for="UserName">UserName</label>
    <input type="text" asp-for="UserName" class="form-control " disabled />
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" class="form-control" disabled />
    <br />

    <label asp-for="PhoneNumber">PhoneNumber</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" disabled />
    <br />

    <a asp-action="Index" asp-controller="User" class="btn btn-warning btn-lg">Back To Data</a>
    <a asp-action="Update" asp-controller="User" class="btn bg-purple btn-lg " asp-route-Id="@Model.Id">@SharedLocalizer["Update"]</a>
    <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger btn-lg" />

</form>

