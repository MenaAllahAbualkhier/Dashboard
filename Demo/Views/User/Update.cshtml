@model Demo.BL.Models.UserVM
@{
    ViewData["Title"] = "Update";
}

<h2>Update User</h2>
<form asp-action="Update" asp-controller="User" class="form-group">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="Id">Id</label>
    <input type="text" asp-for="Id" class="form-control" disabled />
    <br />
    <label asp-for="UserName">UserName</label>
    <input type="text" asp-for="UserName" class="form-control" />
    <span asp-validation-for="UserName" class="alert alert-danger padding-0"></span>
    <br />
    <label asp-for="PhoneNumber">PhoneNumber</label>
    <input type="text" class="form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="alert alert-danger padding-0"></span>
    <br />
    <label asp-for="Email">Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="alert alert-danger padding-0"></span>
    <br /><br />
    <center>
        <input type="submit" value="Update" class="btn btn-lg btn-primary" />
        <input type="reset" value="Cancel" class="btn btn-lg btn-danger" />
        <a asp-action="Index" asp-controller="User" class="btn btn-warning btn-lg">@SharedLocalizer["Back To Data"]</a>
        <a asp-action="Delete" asp-controller="User" class="btn bg-purple btn-lg" asp-route-Id="@Model.Id">@SharedLocalizer["Delete"]</a>
    </center>

</form>

@section Validation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


