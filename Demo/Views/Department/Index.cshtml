@model IEnumerable<Demo.BL.Models.DepartmentVM>
@{
    ViewBag.Title =SharedLocalizer["Department Card"];

    ViewBag.logo = "):";
}

<h2>@SharedLocalizer["Department Card"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>@SharedLocalizer["Id"]</th>
            <th>@SharedLocalizer["Name"]</th>
            <th>@SharedLocalizer["Code"]</th>
            <th>@SharedLocalizer["Details"]</th>
            <th>@SharedLocalizer["Update"]</th>
            <th>@SharedLocalizer["Delete"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td><a class="btn btn-warning btn-lg" asp-action="Details" asp-controller="Department" asp-route-Id="@item.Id">@SharedLocalizer["Details"]</a></td>
            <td><a class="btn bg-purple btn-lg " asp-action="Update" asp-controller="Department" asp-route-Id="@item.Id">@SharedLocalizer["Update"]</a></td>
            <td><a class="btn btn-danger btn-lg" asp-action="Delete" asp-controller="Department" asp-route-Id="@item.Id">@SharedLocalizer["Delete"]</a></td>
        </tr>
            }
    </tbody>
</table>

<br />
<br />

<a class="btn bg-red waves-effect" asp-action="Create" asp-controller="Department">
    <i class="material-icons">group_add</i>
    <span>@SharedLocalizer["Create New Department"]</span>
</a>


