@model Demo.BL.Models.DepartmentVM
@{
    ViewBag.Title = SharedLocalizer["Delete"];
}

<h2>@SharedLocalizer["Delete Department"]</h2>
<form class="form-group" asp-action="Delete" asp-controller="Department">
    <label asp-for="Id">@SharedLocalizer["Id"]</label>
    <input type="text" asp-for="Id" class="form-control" disabled />
    <br />

    <label asp-for="Name">@SharedLocalizer["Name"]</label>
    <input type="text" asp-for="Name" class="form-control " disabled />
    <br />

    <label asp-for="Code">@SharedLocalizer["Code"]</label>
    <input type="text" asp-for="Code" class="form-control" disabled />
    <br />

    <a asp-action="Index" asp-controller="Department" class="btn btn-warning btn-lg">@SharedLocalizer["Back To Data"]</a>
    <a asp-action="Update" asp-controller="Department" class="btn bg-purple btn-lg " asp-route-Id="@Model.Id">@SharedLocalizer["Update"]</a>
    <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger btn-lg" />

</form>


