@model Demo.BL.Models.DepartmentVM
@{
    ViewBag.Title = SharedLocalizer["Update"];
}

<h2>@SharedLocalizer["Department Update Form"] </h2>
<form class="form-group" asp-action="Update" asp-controller="Department">

    <input type="hidden" asp-for="Id" class="form-control" />
    <br />

    <label asp-for="Name">@SharedLocalizer["Name"]</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="alert alert-danger padding-0"></span>
    <br />

    <label asp-for="Code">@SharedLocalizer["code"]</label>
    <input type="text" asp-for="Code" class="form-control" />
    <span asp-validation-for="Code" class="alert alert-danger padding-0"></span>
    <br /><br />
    <center>
        <input type="submit" value="@SharedLocalizer["Update"]" class="btn bg-amber btn-lg" />
        <input type="reset" value="@SharedLocalizer["Cancel"]" class="btn bg-purple btn-lg" />
        <a asp-action="Index" asp-controller="Department" class="btn btn-warning btn-lg">@SharedLocalizer["Back To Data"]</a>
        <a asp-action="Delete" asp-controller="Department" class="btn btn-danger btn-lg" asp-route-Id="@Model.Id">@SharedLocalizer["Delete"]</a>
    </center>

</form>


@section Validation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

